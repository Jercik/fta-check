{
  "name": "fta-check",
  "version": "1.0.1",
  "description": "Thin wrapper around FTA (Fast TypeScript Analyzer) that provides actionable error messages for automated code quality checks and AI agent guidance",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "fta-check": "./bin/fta-check"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.app.json",
    "dev": "tsc --build tsconfig.app.json --watch",
    "start": "node ./bin/fta-check",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest run",
    "lint": "eslint",
    "knip": "knip",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "typescript",
    "analyzer",
    "complexity",
    "fta",
    "code-quality",
    "maintainability",
    "halstead",
    "cyclomatic-complexity"
  ],
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jercik/fta-check"
  },
  "homepage": "https://github.com/Jercik/fta-check#readme",
  "bugs": {
    "url": "https://github.com/Jercik/fta-check/issues"
  },
  "dependencies": {
    "commander": "^14.0.2"
  },
  "peerDependencies": {
    "fta-cli": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.38.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "knip": "^5.66.4",
    "prettier": "3.6.2",
    "semantic-release": "^25.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.5"
  }
}
